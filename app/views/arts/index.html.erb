<p id="notice"><%= notice %></p>

<div class="container my-5">
  <h1>Arts</h1>
</div>


<div class="container my-5">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @arts.each do |art| %>
        <tr>
          <td><%= art.title %></td>
          <td><%= art.description %></td>
          <td><%= link_to 'Show', art %></td>
          <td><%= link_to 'Edit', edit_art_path(art) %></td>
          <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Art', new_art_path %>
</div>



<style media="screen">
  body {
    background: #c0c0aa;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #1cefff, #c0c0aa);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #1cefff, #c0c0aa); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  }
</style>
